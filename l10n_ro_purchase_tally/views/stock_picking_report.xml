                                <span t-field="o.company_id.street"/>
                                <span t-field="o.company_id.city"/>
                            </div>
                            <div class="col-xs-6">
                                <h3>Borderou de achiziție</h3>
                                <h4>nr. <span t-field="o.name"/><span> Data: </span><span t-field="o.date"/></h4>
                            </div>
                            <div class="col-xs-3"></div>
                            <table class="table table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">Nr.</th>
                                        <th class="text-center">Numele și prenumele</th>
                                        <th class="text-center">Domiciliul</th>
                                        <th class="text-center">Serie CI</th>
                                        <th class="text-center">Denumirea produselor</th>
                                        <th class="text-center">Cantitate</th>
                                        <th class="text-center">Preț unitar</th>
                                        <th class="text-center">Suma plătită</th>
                                    </tr>
                                    <tr>
                                        <th class="text-center">1</th>
                                        <th class="text-center">3</th>
                                        <th class="text-center">4</th>
                                        <th class="text-center">5</th>
                                        <th class="text-center">7</th>
                                        <th class="text-center">8</th>
                                        <th class="text-center">9</th>
                                        <th class="text-center">11</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="nr_crt" t-value="1"/>
